<div id="iframe-container" style="overflow: hidden;">
  <iframe src="your-iframe-source-link-here" frameborder="0" style="border: none; width: 100%; height: 500px;" scrolling="no"></iframe>
</div>
<script>
window.addEventListener('resize', function() {
  var iframeContainer = document.getElementById('iframe-container');
  var iframe = iframeContainer.querySelector('iframe');
  // Adjust this logic as needed to calculate the desired height based on the content or the window size.
  iframe.style.height = window.innerHeight * 0.8 + 'px'; // Example: 80% of the window height
});
</script>
